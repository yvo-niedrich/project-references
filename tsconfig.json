{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "dom.iterable",
            "es2015"
        ],
        "removeComments": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "importHelpers": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
